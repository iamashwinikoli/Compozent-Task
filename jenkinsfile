pipeline{
    agent{
        label "node"
    }
    stages{
        stage("echo a line"){
            steps{
                echo "Hello World"
                 }
        }
        stage("run a command"){
            steps {
                sh 'pwd'
            }
        }
        stage("run multiple command"){
            steps {
                sh '''pwd
                date
                ls
                cat'''

            }
        }
    } 
       
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
